# 服务器配置
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=*

# 数据目录配置
DATA_DIR=./server/data

# 数据库配置
DB_PATH=./data/database.json

# JWT配置
JWT_SECRET=iptato-secure-jwt-secret-key
JWT_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 临时文件目录
TMP_DIR=./tmp

# 应用模式配置
NODE_ENV=development
# 设置为 true 可避免 nodemon 频繁重启
STABLE_MODE=true 